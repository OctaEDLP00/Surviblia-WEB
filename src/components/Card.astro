---
interface Props {
  title: string;
  description: string;
  linkText: string;
  href: string;
}

const { title, description, linkText, href } = Astro.props;
---

<div class="card">
  <slot name="icon" />
  <h2>{title}</h2>
  <p>{description}</p>
  <a href={href} class="button">
    {linkText}
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
  </a>
</div>

<style>
  .card {
    background-color: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 1.5rem;
  }

  .card .icon {
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .card h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .card p {
    color: var(--muted-foreground);
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--foreground);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    opacity: 0.8;
    transition: opacity 0.2s;
  }

  .button:hover {
    opacity: 1;
  }
</style>
