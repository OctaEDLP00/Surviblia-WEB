---
import type { _TypeImages } from "~/types/types.d";

interface Props {
  src: string;
  imageSrc?: Array<{
    src: string;
    type?: _TypeImages | string | null;
  }>;
  alt: string;
}

const { src, imageSrc, alt } = Astro["props"];
---

<picture>
  {
    imageSrc !== undefined &&
      imageSrc.length > 1 &&
      imageSrc.map(({ src, type }) => <source src={src} type={type} />)
  }
  {
    imageSrc !== undefined && imageSrc.length === 1 && (
      <source src={imageSrc[0]?.src} type={imageSrc[0]?.type} />
    )
  }
  <img src={src} alt={alt} />
</picture>
