---
import type { Version } from "@/types/enum.ts";

interface Thumbnail {
  url: string;
  width: number;
  height: number;
}

interface Thumbnails {
  default: Thumbnail;
  maxres: Thumbnail;
  medium: Thumbnail;
  high: Thumbnail;
  standard: Thumbnail;
}

interface Props {
  videoId: string;
  episodeTitle: string;
  episodeNumber: string;
  thumbnails: Thumbnails;
  version: Version;
}

const { videoId, episodeNumber, episodeTitle, thumbnails, version } =
  Astro["props"];
